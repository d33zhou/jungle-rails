<header class="page-header">
  <h1>Admin &raquo; Dashboard</h1>
</header>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="text-center col-md-6">Total Products</th>
      <th class="text-center col-md-6">Total Product Categories</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="text-center"><%= @products %></td>
      <td class="text-center"><%= @categories %></td>
    </tr>
    <tr>
      <td>
        <form action="/admin/products">
          <button type="submit" class="btn btn-primary btn-lg btn-block">Manage Products</button>
        </form>
      </td>
      <td>
        <form action="/admin/categories">
          <button type="submit" class="btn btn-primary btn-lg btn-block">Manage Categories</button>
        </form>
      </td>
    </tr>
  </tbody>
</table>